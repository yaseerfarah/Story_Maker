<?xml version="1.0" encoding="utf-8"?>
<com.gturedi.views.StatefulLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.ImageEditor"
    android:layoutDirection="ltr"
    android:id="@+id/stateful"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/done"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/crop"
            android:layout_marginBottom="5dp">

            <ja.burhanrashid52.photoeditor.PhotoEditorView
                android:id="@+id/photoEditorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>







        <ImageButton
            android:id="@+id/crop"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/rectangle_b_selector"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_crop"
            />






            <ImageButton
                android:id="@+id/filter"
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rectangle_b_selector"
                android:src="@drawable/ic_filter"
                />

            <ImageButton
                android:id="@+id/spiral"
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rectangle_b_selector"
                android:src="@drawable/ic_spiral"
                />






        <ImageButton
            android:id="@+id/done"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_36sdp"
            android:background="@drawable/rectangle_b"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_done"
            />














        <ImageButton
            android:id="@+id/add_txt"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle_b"
            android:src="@drawable/ic_text"
            />




        <ImageButton
            android:id="@+id/add_img"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle_b_selector"
            android:src="@drawable/ic_add_image"
            />


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />


    </RelativeLayout>
    </com.gturedi.views.StatefulLayout>

