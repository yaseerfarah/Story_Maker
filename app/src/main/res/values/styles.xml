<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CustomInverseProgress" parent="android:Widget.Material.Light.ProgressBar.Small.Inverse">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/light_green</item>

    </style>

    <style name="stfProgress">
        <item name="android:layout_width">@dimen/stfProgressSize</item>
        <item name="android:layout_height">@dimen/stfProgressSize</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/colorAccent</item>
    </style>

</resources>